% length used by \smartresize
\newlength{\myl}
% resize only when necessary to fit linewidth
\newcommand{\smartresize}[1]{
	\settowidth{\myl}{#1}
	\ifdimcomp{\the\linewidth}{>}{\the\myl}
	{
		#1
	}
	{
		\resizebox{\linewidth}{!}{#1}
	}
}


