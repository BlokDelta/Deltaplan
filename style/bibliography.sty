\usepackage[style=apa, sorting=nyt, alldates=year, doi=false, url=false]{biblatex}

\usepackage{silence}
\WarningFilter{latex}{Empty bibliography}

% optional: to finetune subbibliography heading (now: 'Referenties')
% \defbibheading{subbibliography}{\section*{References for Chapter \ref{refsection: \therefsection}}}
\defbibheading{subbibliography}{\paragraph{Literatuur}}

% (re)define font for urls. If you do this earlier in the preamble, it doesn't work somehow.
\urlstyle{tt}

\renewcommand*{\bibfont}{\small}

% suppress 'Retrieved' ('Verkregen') text in bibliography
% https://tex.stackexchange.com/a/124587/213645
\DeclareSourcemap{
	\maps[datatype=bibtex]{
		\map{
			\step[fieldsource=url,
				notmatch=\regexp{wiki},
				final=1]
			\step[fieldset=urldate, null]
		}
	}
}
