%
%   fonts, as used in typography.sty
%

\usepackage{fontspec}
\newfontfamily\worksanslight[
	Ligatures=TeX, % enables ligatures such as dashes and quotes
	BoldFont=Work Sans Medium,
	NFSSFamily=worksanslight,
	Scale=1.1
]{Work Sans Light}

\newfontfamily\worksansregular[
	Ligatures=TeX, % enables ligatures such as dashes and quotes
	BoldFont=Work Sans SemiBold,
	NFSSFamily=worksansregular,
	Scale=1.1
]{Work Sans Regular}

\newfontfamily\ibmplexseriflight[
	Ligatures=TeX, % enables ligatures such as dashes and quotes
	BoldFont=IBM Plex Serif Medium,
	NFSSFamily=ibmplexseriflight
]{IBM Plex Serif Light}

\newfontfamily\ibmplexmonolight[
	Ligatures=TeX, % enables ligatures such as dashes and quotes
	BoldFont=IBM Plex Mono Medium,
	NFSSFamily=ibmplexmonolight
]{IBM Plex Mono Light}

\newfontfamily\ibmplexmonoregular[
	NFSSFamily=ibmplexmonoregular
]{IBM Plex Mono}

\renewcommand{\sfdefault}{worksansregular}
\renewcommand{\ttdefault}{ibmplexmonoregular}
\renewcommand{\familydefault}{\sfdefault}

\newfontfamily\merriweather[BoldFont=Merriweather]{Merriweather Light}
